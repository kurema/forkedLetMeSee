<%
dict.each do |book|
	book = book.to_i
	case mode
		when 'menu'; item = menu( book )
		when 'copyright'; item = copyright( book )
	end
        if ( item && item.length != 0 ) then
%>
    <hr class="sep">
    <div class="day">
      <h2><span class="date"><%= conv(dicts[book].title) %></span></h2>
      <div class="body">
	<div class="section">
	  <p class="content"><%= html_output(conv(item)) %></p>
	</div>
      </div>
      <div class="referer"></div>
    </div>
<%
	end
end
%>
